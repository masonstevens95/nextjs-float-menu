{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "noUnusedLocals": false,
    "rootDir": ".",
    "types": [
      "@types/node",
      "react",
      "react-dom",
      // "@testing-library/jest-dom",
      "@types/testing-library__jest-dom"
    ],
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/react-float-menu.ts",
    "src/components/**/*.{ts,tsx,scss}",
    "src/icons/*.tsx",
    "src/utils/*.ts",
    "src/models/*.ts",
    "./globals.d.ts",
    "./jest-setup.ts",
    "src/**/*test.tsx",
    "./build/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vite.config.ts",
    "src/**/*.d.ts"
  ]
}
